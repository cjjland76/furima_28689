<%= render "shared/header" %>
<div class="item-show">検索一覧
  <div class='item-contents'>
    <h2 class='title'>検索商品</h2>
    <ul class='item-lists'>  

      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <% @items.each do |item| %>
        <li class='list list-shadow'>
          <%= link_to item_path(item.id) do %>
            <div class='item-img-content'>
              <%= image_tag item.image, class: "item-img" %>

              <%# 商品が売れていればsold outの表示 %>
              <% if item.order.present? %>
              <div class='sold-out hidden'>
                <span>Sold Out!!</span>
              </div>
              <% end %>
              <%# //商品が売れていればsold outの表示 %>

            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= item.item_name %>
              </h3>
              <div class='item-price'>
                <span><%= item.price %>円<br>(税込み)</span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'><%= item.view_count.to_i %></span>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to new_item_path do %>
  <div class='purchase-btn'>
    <span class='purchase-btn-text'>出品する</span>
      <%= image_tag 'camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
  </div>
<% end %>

<%= render "shared/second-footer" %>